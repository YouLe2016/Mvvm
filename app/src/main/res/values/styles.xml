<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_color</item>
    </style>

    <!-- 加载中的Progressbar样式 -->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="NetworkStateViewStyle">
        <item name="loadingView">@layout/view_loading</item>
        <item name="errorView">@layout/view_network_error</item>
        <item name="nsvErrorImage">@drawable/ic_net_error</item>
        <item name="nsvErrorText">网络异常~</item>
        <item name="emptyView">@layout/view_empty</item>
        <item name="nsvEmptyImage">@drawable/ic_empty</item>
        <item name="nsvEmptyText">没有数据~</item>
        <item name="noNetworkView">@layout/view_no_network</item>
        <item name="nsvNoNetworkImage">@drawable/ic_no_network</item>
        <item name="nsvNoNetworkText">没有网络~</item>
        <item name="nsvRefreshImage">@drawable/ic_refresh</item>
        <item name="nsvTextSize">14sp</item>
        <item name="nsvTextColor">#8a000000</item>
    </style>
</resources>
